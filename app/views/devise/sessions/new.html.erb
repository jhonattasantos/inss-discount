<div class="row vh-100 justify-content-center align-items-center">
  <div class="col-lg-3">
    <h2 class="mb-3"><%= I18n.t('login.title') %></h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "mb-3" }) do |f| %>
      <div class="mb-3">
        <%= f.label :email, class: "form-label" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-sm" %>
      </div>

      <div class="mb-3">
        <%= f.label :password, I18n.t('login.password'), class: "form-label" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control form-control-sm" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="mb-3">
          <%= f.check_box :remember_me, class: "form-check-input" %>
          <%= f.label :remember_me, I18n.t('login.remember_me'), class: "form-check-label" %>
        </div>
      <% end %>

      <div class="mb-3 text-center">
        <%= f.submit I18n.t('login.submit'), class: "btn btn-primary w-100" %>
      </div>
    <% end %>
  </div>
</div>
