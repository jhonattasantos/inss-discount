<% if notice.present? %>
  <div class="alert alert-success" role="alert">
    <%= notice %>
  </div>
<% end %>

<h1><%= I18n.t('employees.index.title') %></h1>

<div class="mb-3 d-flex flex-row-reverse">
  <%= link_to I18n.t('employees.index.new'), new_employee_path, class: "btn btn-primary" %>
</div>

<div id="employees">
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>Id</th>
        <th><%= I18n.t('employees.fields.document') %></th>
        <th><%= I18n.t('employees.fields.name') %></th>
        <th><%= I18n.t('employees.fields.birthdate') %></th>
        <th><%= I18n.t('employees.fields.salary') %></th>
        <th><%= I18n.t('common.edit') %></th>
      </tr>
    </thead>
    <tbody>
      <% @employees.each do |employee| %>
        <tr>
          <td><%= employee.id %></td>
          <td><%= employee.cpf %></td>
          <td><%= employee.name %></td>
          <td><%= employee.birthdate.strftime("%d/%m/%Y") %></td>
          <td>R$ <%= employee.salary %></td>
          <td><%= link_to I18n.t('common.edit'), edit_employee_path(employee) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="pagination-container">
    <%= paginate @employees, window: 2 %>
  </div>
</div>
