<div id="<%= dom_id employee %>">
  <%= form_with(model: employee, class: "needs-validation", novalidate: true, id: "employee-form") do |form| %>
    <div class="row mb-3">
      <div class="col-md-4">
        <%= form.label :name, class: "form-label" %>
        <%= form.text_field :name, class: "form-control", disabled: true %>
      </div>

      <div class="col-md-4">
        <%= form.label :cpf, class: "form-label" %>
        <%= form.text_field :cpf, class: "form-control cpf-mask", disabled: true %>
      </div>

      <div class="col-md-4">
        <%= form.label :birthdate, class: "form-label" %>
        <%= form.date_field :birthdate, class: "form-control", disabled: true %>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col-md-6">
        <%= form.label :salary, class: "form-label" %>
        <%= form.text_field :salary, class: "form-control", required: true, disabled: true %>
      </div>

      <div class="col-md-6">
        <%= form.label :inss_discount, class: "form-label" %>
        <%= form.text_field :inss_discount, class: "form-control", required: true, disabled: true %>
      </div>
    </div>


    <div class="row mb-3">
      <div class="col-md-3">
        <%= form.label :zip_code, class: "form-label" %>
        <%= form.text_field :zip_code, class: "form-control cep-mask", disabled: true %>
      </div>

    <div class="col-md-7">
      <%= form.label :address, class: "form-label" %>
      <%= form.text_field :address, class: "form-control", disabled: true %>
    </div>

    <div class="col-md-2">
      <%= form.label :number, class: "form-label" %>
      <%= form.text_field :number, class: "form-control", disabled: true %>
    </div>

    <div class="col-md-5">
      <%= form.label :neighborhood, class: "form-label" %>
      <%= form.text_field :neighborhood, class: "form-control", disabled: true %>
    </div>

    <div class="col-md-5">
      <%= form.label :city, class: "form-label" %>
      <%= form.text_field :city, class: "form-control", disabled: true %>
    </div>

    <div class="col-md-2">
      <%= form.label :state, class: "form-label" %>
      <%= form.text_field :state, class: "form-control", disabled: true %>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-md-6">
      <%= form.label :personal_phone, class: "form-label" %>
      <%= form.text_field :personal_phone, class: "form-control phone-mask", disabled: true %>
    </div>

    <div class="col-md-6">
      <%= form.label :reference_phone, class: "form-label" %>
      <%= form.text_field :reference_phone, class: "form-control phone-mask", disabled: true %>
    </div>
  </div>
  <% end %>
</div>
