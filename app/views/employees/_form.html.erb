<%= form_with(model: employee, class: "needs-validation", novalidate: true, id: "employee-form") do |form| %>
  <% if employee.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <h4 class="alert-heading"><%= pluralize(employee.errors.count, "error") %> <%= I18n.t('errors.messages.prohibited_this_employee_from_being_saved') %></h4>
      <ul>
        <% employee.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row mb-3">
    <div class="col-md-4">
      <%= form.label :name, I18n.t('employees.fields.name'), class: "form-label" %>
      <%= form.text_field :name, class: "form-control", required: true %>
    </div>

    <div class="col-md-4">
      <%= form.label :cpf,I18n.t('employees.fields.document'), class: "form-label" %>
      <%= form.text_field :cpf, class: "form-control cpf-mask", required: true %>
    </div>

    <div class="col-md-4">
      <%= form.label :birthdate,I18n.t('employees.fields.birthdate'), class: "form-label" %>
      <%= form.date_field :birthdate, class: "form-control", required: true %>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-md-6">
      <%= form.label :salary,I18n.t('employees.fields.salary'), class: "form-label" %>
      <%= form.text_field :salary, class: "form-control", required: true %>
    </div>

    <div class="col-md-6">
      <%= form.label :inss_discount,I18n.t('employees.fields.inss_discount'), class: "form-label" %>
      <%= form.text_field :inss_discount_display, class: "form-control", required: true, disabled: true %>
      <%= form.hidden_field :inss_discount, required: true %>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-md-3">
      <%= form.label :zip_code,I18n.t('employees.fields.zip_code'), class: "form-label" %>
      <%= form.text_field :zip_code, class: "form-control cep-mask", required: true %>
    </div>

    <div class="col-md-7">
      <%= form.label :address,I18n.t('employees.fields.address'), class: "form-label" %>
      <%= form.text_field :address, class: "form-control", required: true %>
    </div>

    <div class="col-md-2">
      <%= form.label :number,I18n.t('employees.fields.number'), class: "form-label" %>
      <%= form.text_field :number, class: "form-control", required: true %>
    </div>

    <div class="col-md-5">
      <%= form.label :neighborhood,I18n.t('employees.fields.neighborhood'), class: "form-label" %>
      <%= form.text_field :neighborhood, class: "form-control", required: true %>
    </div>

    <div class="col-md-5">
      <%= form.label :city,I18n.t('employees.fields.city'), class: "form-label" %>
      <%= form.text_field :city, class: "form-control", required: true %>
    </div>

    <div class="col-md-2">
      <%= form.label :state,I18n.t('employees.fields.state'), class: "form-label" %>
      <%= form.text_field :state, class: "form-control", required: true %>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-md-6">
      <%= form.label :personal_phone,I18n.t('employees.fields.personal_phone'), class: "form-label" %>
      <%= form.text_field :personal_phone, class: "form-control phone-mask", required: true %>
    </div>

    <div class="col-md-6">
      <%= form.label :reference_phone,I18n.t('employees.fields.reference_phone'), class: "form-label" %>
      <%= form.text_field :reference_phone, class: "form-control phone-mask", required: true %>
    </div>
  </div>

  <div class="mb-3 d-flex justify-content-between">
    <%= link_to I18n.t('common.back'), employees_path %>
    <%= form.submit employee.id.present? ? I18n.t('employees.edit.submit') : I18n.t('employees.new.submit'), class: "btn btn-primary" %>
  </div>
<% end %>

<% content_for :scripts do %>
  <%= javascript_include_tag 'inss_calculation' %>
<% end %>