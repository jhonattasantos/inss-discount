<%= form_with(model: employee, class: "needs-validation", novalidate: true, id: "employee-form") do |form| %>
  <% if employee.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <h4 class="alert-heading"><%= pluralize(employee.errors.count, "error") %> <%= I18n.t('errors.messages.prohibited_this_employee_from_being_saved') %></h4>
      <ul>
        <% employee.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row mb-3">
    <div class="col-md-4">
      <%= form.label :name, class: "form-label" %>
      <%= form.text_field :name, class: "form-control", required: true %>
    </div>

    <div class="col-md-4">
      <%= form.label :cpf, class: "form-label" %>
      <%= form.text_field :cpf, class: "form-control cpf-mask", required: true %>
    </div>

    <div class="col-md-4">
      <%= form.label :birthdate, class: "form-label" %>
      <%= form.date_field :birthdate, class: "form-control", required: true %>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-md-6">
      <%= form.label :salary, class: "form-label" %>
      <%= form.text_field :salary, class: "form-control money-mask", required: true %>
    </div>

    <div class="col-md-6">
      <%= form.label :inss_discount, class: "form-label" %>
      <%= form.text_field :inss_discount, class: "form-control money-mask", required: true %>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-md-3">
      <%= form.label :zip_code, class: "form-label" %>
      <%= form.text_field :zip_code, class: "form-control cep-mask", required: true %>
    </div>

    <div class="col-md-7">
      <%= form.label :street, class: "form-label" %>
      <%= form.text_field :street, class: "form-control", required: true %>
    </div>

    <div class="col-md-2">
      <%= form.label :number, class: "form-label" %>
      <%= form.text_field :number, class: "form-control", required: true %>
    </div>

    <div class="col-md-5">
      <%= form.label :neighborhood, class: "form-label" %>
      <%= form.text_field :neighborhood, class: "form-control", required: true %>
    </div>

    <div class="col-md-5">
      <%= form.label :city, class: "form-label" %>
      <%= form.text_field :city, class: "form-control", required: true %>
    </div>

    <div class="col-md-2">
      <%= form.label :state, class: "form-label" %>
      <%= form.text_field :state, class: "form-control", required: true %>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-md-6">
      <%= form.label :personal_phone, class: "form-label" %>
      <%= form.text_field :personal_phone, class: "form-control phone-mask", required: true %>
    </div>

    <div class="col-md-6">
      <%= form.label :reference_phone, class: "form-label" %>
      <%= form.text_field :reference_phone, class: "form-control phone-mask", required: true %>
    </div>
  </div>

  <div class="mb-3">
    <%= form.submit "Salvar", class: "btn btn-primary" %>
  </div>
<% end %>
